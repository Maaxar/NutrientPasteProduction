<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="MakeRefinedNutrientPasteBase" Abstract="True">
        <defName>MakeNutrientPasteBase</defName>
        <workSpeedStat>UnskilledLaborSpeed</workSpeedStat>
        <workSkill>Crafting</workSkill> <!-- This states what skill gives speed boost? Definitely not what allows prioritization / disallowal... -->
        <effectWorking>Cremate</effectWorking>
        <soundWorking>Recipe_Cremate</soundWorking>
        <allowMixingIngredients>true</allowMixingIngredients>
        <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<recipeUsers>
			<li>BiofuelRefinery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Foods</li>
						<li>PlantMatter</li>
					</categories>
					<disallowedThingDefs>
						<li>Hay</li>
					</disallowedThingDefs>
          <disallowedCategories>
            <li>FoodMeals</li>
          </disallowedCategories>
				</filter>
				<count>3.5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Foods</li>
				<li>PlantMatter</li>
			</categories>
			<disallowedThingDefs>
				<li>Hay</li>
			</disallowedThingDefs>
      <disallowedCategories>
        <li>FoodMeals</li>
      </disallowedCategories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedCategories>
				<li>MeatRaw</li>
				<li>AnimalProductRaw</li>
			</disallowedCategories>
		</defaultIngredientFilter>
		<researchPrerequisite>NutrientPaste</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="MakeRefinedPasteBase">
        <defName>MakeRefinedNutrientPaste</defName>
        <label>Make refined paste from organics</label>
        <description>Make a heavily processed nutrient paste meal by extracting nutrients from any organic material. Takes twice as long to make as regular nutrient paste meals, but the ingredients are no longer recognizable. This process also changes the color of the paste to red, no one is quite sure why...</description>
        <jobString>Refining nutrient paste.</jobString>

        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>FoodRaw</li>
                    </categories>
                </filter>
                <count>0.3</count>
            </li>
        </ingredients>
        <products>
            <MealRefinedNutrientPaste>1</MealRefinedNutrientPaste>
        </products>
        <workAmount>400</workAmount>
    </RecipeDef>

    <RecipeDef ParentName="MakeNutrientPasteBase">
        <defName>MakeNutrientPasteBulk</defName>
        <label>Make batch of refined paste from organics</label>
        <description>Make a batch of 10 heavily processed nutrient paste meals by extracting nutrients from any organic material. Takes twice as long to make as regular nutrient paste meals, but the ingredients are no longer recognizable. This process also changes the color of the paste to red, no one is quite sure why...</description>
        <jobString>Refining a batch of nutrient paste.</jobString>

        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>FoodRaw</li>
                    </categories>
                </filter>
                <count>3</count>
            </li>
        </ingredients>
        <products>
            <MealRefinedNutrientPaste>10</MealRefinedNutrientPaste>
        </products>
        <targetCountAdjustment>10</targetCountAdjustment>
        <workAmount>4000</workAmount>
    </RecipeDef>
</Defs>
